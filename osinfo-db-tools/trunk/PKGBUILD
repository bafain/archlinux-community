pkgname=osinfo-db-tools
pkgver=1.2.0
pkgrel=1
pkgdesc="Tools for managing the osinfo database"
arch=('x86_64')
url="https://libosinfo.org/"
license=('GPL')
depends=('glib2' 'libarchive' 'libxslt')
makedepends=('intltool')
source=("https://releases.pagure.org/libosinfo/$pkgname-$pkgver.tar.gz"{,.asc})
validpgpkeys=('DAF3A6FDB26B62912D0E8E3FBE86EBB415104FDF') # Daniel P. Berrange
sha256sums=('3b50829e5b58db15fe9fc8caf005aa18300262fea4562da0c2dfbe56355ff81f'
            'SKIP')

build() {
	cd $pkgname-$pkgver
	./configure --prefix=/usr
	make
}

package() {
	cd $pkgname-$pkgver
	make DESTDIR="$pkgdir" install
}
