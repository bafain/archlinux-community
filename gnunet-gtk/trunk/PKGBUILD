pkgname=gnunet-gtk
pkgver=0.10.1
pkgrel=2
pkgdesc="A frontend for GNUnet"
arch=('x86_64')
url="http://gnunet.org"
license=('GPL')
depends=('gnunet' 'glade' 'adns')
makedepends=('pkgconfig')
source=(ftp://ftp.gnu.org/gnu/gnunet/$pkgname-$pkgver.tar.gz)
sha512sums=('66a09945fab1f606eb4ea1b810db2f3f83e2d76380fb4868b318b954a40f2c664f8bd57bdd7cda6ac13f2019651b2defe898abf48a60dc16769eb8ba6e549e05')

build() {
  cd "$srcdir"/$pkgname-$pkgver
  sed -i 's|CC -E|CC -O2 -E|g' configure
  ./configure --prefix=/usr --with-gnunet=/usr
  make
}

package() {
  cd "$srcdir"/$pkgname-$pkgver
  make DESTDIR="$pkgdir" install
}
