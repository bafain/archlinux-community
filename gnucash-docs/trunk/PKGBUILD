# Contributor: Juergen Hoetzel <juergen@archlinux.org>

pkgname=gnucash-docs
pkgver=3.2
pkgrel=1
pkgdesc='Documentation for GnuCash'
arch=(any)
url='https://gnucash.org/docs.phtml'
license=(FDL)
depends=(yelp)
source=(https://downloads.sourceforge.net/gnucash/$pkgname-$pkgver.tar.gz)
sha256sums=('469a524352a3b0e5308ba68a3c0fac79a501998b29db9c16a714ce879aa9c39c')

build() {
  cd $pkgname-$pkgver
  ./configure --prefix=/usr
  make
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="$pkgdir" install
}
